<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= render 'shared/user_info' %>
    </section>
    <% if @user==current_user %>
      <section class="tv_form">
        <%= render 'shared/tv_form' %>
      </section>
    <% end %>
  </aside>
  <div class="col-md-8">
    <% if @user.tvs.any? %>
      <h3>Tvs (<%= @user.tvs.count %>)</h3>
      <ol class="tvs">
        <%= render @tvs %>
      </ol>
    <% end %>
  </div>
</div>